#!/bin/sh -e
HASH=""
FILE=""
URL=""
TAG=""
while getopts "f:u:h:t:" opt ; do
  case $opt in
    f) FILE="$OPTARG";;
    u) URL="$OPTARG";;
    h) HASH="$OPTARG";;
    t) TAG="$OPTARG";;
    *)
      echo "unknown arg $opt"
      exit 1
      ;;
  esac
done

[ -z "$URL" ] && echo "url required" && exit 1
[ -z "$FILE" ] && echo "file required" && exit 1
[ -z "$HASH" ] && echo "hash required" && exit 1

NEEDS=1
if [ -e "$FILE" ]; then
  if file "$FILE" | grep -q "compressed data"; then
    NEEDS=0
  fi
fi
if [ "$NEEDS" -eq 1 ]; then
  echo "downloading: $URL"
  curl --silent -L "$URL" > "$FILE"
fi

CURHASH=$(sha256sum "$FILE" | cut -c 1-7)
[ "$CURHASH" != "$HASH" ] && echo "hash mismatch ($HASH != $CURHASH)" && exit 1
[ -n "$TAG" ] && TAG="'$TAG'"

if [ -n "$PKGS_LIST" ]; then
  if echo "$URL" | grep -q "https://github.com"; then
    echo "$URL" | cut -d "/" -f 4,5 | sed 's/^/check_version "/g;s/$/"/g' | sed "s/$/ $TAG/g" >> "$PKGS_LIST"
  fi
fi

exit 0
