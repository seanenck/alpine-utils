#!/bin/sh -e
BUILD="build"
rm -rf "$BUILD"
mkdir -p "$BUILD"
CACHE="$HOME/.cache/pkgversions/builds/"
mkdir -p "$CACHE"
IMG="$(date +%Y%m%d.%H%M.usrbin.img)"
../../bin/genusrbin -c "$CACHE" -s "$PWD/src" -t "$PWD/$BUILD" -w "$CACHE" -o "$BUILD" -a aarch64 -f "$IMG"
echo "success"
[ -d "/var/usrbin" ] && echo && echo "deploying..." && doas cp "$BUILD/$IMG" /var/usrbin/
